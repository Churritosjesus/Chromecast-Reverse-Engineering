<?xml version="1.0" encoding="utf-8"?>
<selector android:insetLeft="1.0dip" android:insetRight="1.0dip" android:insetBottom="2.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/md_grey_300" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <ripple android:color="@color/orange_button_selected">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/orange_button" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>